<h3><%= @post.title %></h3>

by: <%= @post.user.first_name %>

<p><%= @post.body %></p>

<h3> Total Likes: <%= @post.likes.count %></h3>

<p>
  Liked by<% @post.likes.each do |like| %>
    <%= like.user.first_name %>
  <% end %>
</p

<% if @user_likes.include?(current_user.id) %>
<% else %>
  <h3>Like this Post!</h3>

  <%= form_with(url: likes_path, method: "post") do |form| %>
    <p>
      <%= form.hidden_field :post_id, value: @post.id %>
      <%= form.submit "Like!" %>
    </p>
  <% end %>
<% end %>

<h3> Comments </h3>

<p>
  <% @post.comments.each do |comment| %>
    <div>
      <%= comment.body %></br>
      by: <%= comment.commenter.first_name %>
    </div>
  <% end %>
</p>



<h3>Add a comment:</h3>

<%= form_with model: [ @post, @post.comments.build ] do |form| %>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>


<div><%= link_to "Back to your timeline", posts_path %></div>