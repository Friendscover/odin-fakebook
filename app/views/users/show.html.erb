<% if current_user.id == params[:id].to_i %>
  <h1> This is your profile, <%= @user.first_name %></h1>
<% else %>
  <h1> This is the profile of <%= @user.first_name %> </h1>
<% end %>

<h3> Friends: </h3>

<% @friends.each do |f| %>
  <% if f.accepted_request == true %>
    <div><%= link_to f.friend.first_name, user_path(f.friend_id) %></div>
  <% end %>
<% end %>


