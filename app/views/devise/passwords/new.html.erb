<h2 class="columns box is-centered is-size-4">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field columns is-centered mt-4">
    <%= f.label :email, :class => "mr-4" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions columns is-centered mt-4">
    <%= f.submit "Send me reset password instructions", :class => "button is-warning" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
